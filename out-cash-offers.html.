  <script>
    const detailEl = document.getElementById('detail');
    const resultsEl = document.getElementById('results');
    const filtersEl = document.getElementById('filters');

    function openDetail(id){
      // In a real app, fetch by id. For demo we just show the prebuilt detail view
      detailEl.classList.add('show');
      resultsEl.style.display='none';
      filtersEl.style.display='none';
      window.scrollTo({top:0, behavior:'smooth'});
    }
    function closeDetail(){
      detailEl.classList.remove('show');
      resultsEl.style.display='block';
      filtersEl.style.display='grid';
      window.scrollTo({top:0, behavior:'smooth'});
    }
    function submitOffer(){
      const val = document.getElementById('offerInput').value || '';
      document.getElementById('offerFlash').style.display='block';
      if(val){
        // reveal contact after offer in this demo
        unlockContact();
      }
    }
    function unlockContact(){
      document.getElementById('lockedContact').style.display='none';
      document.getElementById('contactDetails').style.display='block';
    }
  </script>
