  <script>
    // === Instant front-end filtering for the demo grid ===
    const form = document.getElementById('searchForm');
    const results = document.getElementById('results');
    const cards = Array.from(results.querySelectorAll('.card'));
    const resetBtn = document.getElementById('resetBtn');
    const sortSelect = document.getElementById('sort');

    function normalize(val) { return (val || '').toString().trim().toLowerCase(); }

    function passFilters(card, filters) {
      const get = (attr) => card.getAttribute(attr) || '';
      // Model
      if (filters.model && normalize(get('data-model')) !== normalize(filters.model)) return false;
      // AP HW
      if (filters.apHw && normalize(get('data-ap-hw')) !== normalize(filters.apHw)) return false;
      // AP SW
      if (filters.apSw && normalize(get('data-ap-sw')) !== normalize(filters.apSw)) return false;
      // Accidents
      if (filters.accidents && normalize(get('data-accidents')) !== normalize(filters.accidents)) return false;
      // Seats (Model X specific, but we treat generally)
      if (filters.seats) {
        const seatVal = (get('data-seats') || '').toString();
        if (seatVal !== filters.seats) return false;
      }
      // FUSC
      if (filters.fusc) {
        const fusc = normalize(get('data-fusc'));
        if (filters.fusc === 'Only FUSC' && fusc !== 'yes') return false;
        if (filters.fusc === 'Exclude FUSC' && fusc === 'yes') return false;
      }
      // Range min/max
      const range = parseInt(get('data-range') || '0', 10);
      if (filters.rangeMin && range < parseInt(filters.rangeMin, 10)) return false;
      if (filters.rangeMax && range > parseInt(filters.rangeMax, 10)) return false;
      // Price max
      const price = parseInt(get('data-price') || '0', 10);
      if (filters.priceMax && price > parseInt(filters.priceMax, 10)) return false;
      // Mileage max
      const miles = parseInt(get('data-mileage') || '0', 10);
      if (filters.odometerMax && miles > parseInt(filters.odometerMax, 10)) return false;
      // Keyword search simple (in title)
      const text = normalize(form.text.value);
      if (text) {
        const title = (card.querySelector('.title')?.textContent || '').toLowerCase();
        if (!title.includes(text)) return false;
      }
      return true;
    }

    function sortCards(list, mode) {
      const byNum = (attr, dir = 1) => (a, b) => dir * ((parseInt(a.getAttribute(attr) || '0', 10)) - (parseInt(b.getAttribute(attr) || '0', 10)));
      const modes = {
        'price-asc': byNum('data-price', 1),
        'price-desc': byNum('data-price', -1),
        'range-desc': byNum('data-range', -1),
        'mileage-asc': byNum('data-mileage', 1),
      };
      return list.sort(modes[mode] || (() => 0));
    }

    function applyFilters(ev) {
      if (ev) ev.preventDefault();
      const filters = Object.fromEntries(new FormData(form).entries());
      // Filter
      const visible = cards.filter(c => passFilters(c, filters));
      const hidden = cards.filter(c => !passFilters(c, filters));
      hidden.forEach(c => c.style.display = 'none');
      visible.forEach(c => c.style.display = '');
      // Sort
      const mode = sortSelect.value;
      const ordered = sortCards(visible.slice(), mode);
      ordered.forEach(el => results.appendChild(el)); // reflow in order
    }

    form.addEventListener('submit', applyFilters);
    form.addEventListener('change', (e) => {
      if (e.target && e.target.tagName.match(/(INPUT|SELECT)/)) applyFilters();
    });
    resetBtn.addEventListener('click', () => {
      setTimeout(applyFilters, 0);
    });
  </script>
</body>
</html>
